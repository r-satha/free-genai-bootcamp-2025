<sentence-structure-examples>
    <example>
        <sentence>The episode is new.</sentence>
        <structure>[Subject] [Adjective].</structure>
    </example>
    <example>
        <sentence>The episode is in the series.</sentence>
        <structure>[Location] [Subject] [Verb].</structure>
    </example>
    <example>
        <sentence>Watch the new episode.</sentence>
        <structure>[Object] [Verb].</structure>
    </example>
    <example>
        <sentence>Did you see the new episode?</sentence>
        <structure>[Subject] [Object] [Verb]?</structure>
    </example>
    <example>
        <sentence>This morning, I watched the new episode.</sentence>
        <structure>[Time] [Subject] [Object] [Verb].</structure>
    </example>
    <example>
        <sentence>Are the players becoming greedy?</sentence>
        <structure>[Subject] [Verb]?</structure>
    </example>
    <example>
        <sentence>Did you enjoy the episode?</sentence>
        <structure>[Object] [Verb]?</structure>
    </example>
    <example>
        <sentence>The players are becoming greedy in the game.</sentence>
        <structure>[Subject] [Verb] [Location].</structure>
    </example>
